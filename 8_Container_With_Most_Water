
class Solution {
    public int maxArea(int[] height) {
        int i=0,j=height.length-1,maxwater=0;
        while(i<j){
            int width=j-i;
            int area=Math.min(height[i],height[j])*width;
            maxwater=Math.max(area,maxwater);
            if(height[i]<height[j]){
                i++;
            }else{
                j--;
            }
        }
        return maxwater;
    }
}
